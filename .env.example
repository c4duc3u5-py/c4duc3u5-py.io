# eBay seller username (your public seller name)
EBAY_SELLER_NAME=your_seller_name

# LLM API endpoint (OpenAI-compatible)
LLM_BASE_URL=http://localhost:4141
LLM_MODEL=gpt-5-mini
LLM_API_KEY=sk-your-key-here

# ─── Pinterest Auto-Pinner ───
# Set PINTEREST_ENABLED=true to activate pinning
PINTEREST_ENABLED=false

# Get your token at https://developers.pinterest.com/apps/
# Required scopes: pins:write, boards:read
PINTEREST_TOKEN=your_pinterest_token

# Find your board ID: python blog-generator/pinterest_pinner.py --list-boards
PINTEREST_BOARD_ID=your_board_id

# Image text overlays (requires Pillow)
PINTEREST_OVERLAY_ENABLED=true
PINTEREST_OVERLAY_FONT_SIZE=48
